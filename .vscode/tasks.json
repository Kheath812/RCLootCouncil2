    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy-Local",
            "type": "shell",
            "command": "sh .scripts/deploy.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Deploy-Local-PTR",
            "type": "shell",
            "command": "sh ./scripts/deploy.sh",
            "args": [
                "-p"
            ],
            "group": "build"
        },
        {
            "label": "Busted All",
            "type": "shell",
            "command": "busted",
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}